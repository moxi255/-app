<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_st_li"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include layout="@layout/layout_status_titlebar"/>

    <Button
        android:id="@+id/activity_st_li_bt_onoff"
        android:layout_width="@dimen/dimen_150_dip"
        android:layout_height="@dimen/dimen_150_dip"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:focusable="true"
        android:background="@drawable/status_light_onoff_selector" />
    
    <ImageView  
        android:id="@+id/wave1"  
        android:layout_width="@dimen/dimen_150_dip"  
        android:layout_height="@dimen/dimen_150_dip"  
        android:layout_centerInParent="true"  
        android:background="@drawable/wave"  
        />
    
    <ImageView  
        android:id="@+id/wave2"  
        android:layout_width="@dimen/dimen_150_dip"  
        android:layout_height="@dimen/dimen_150_dip"  
        android:layout_centerInParent="true"  
        android:background="@drawable/wave"  
        />
    
    <ImageView  
        android:id="@+id/wave3"  
        android:layout_width="@dimen/dimen_150_dip"  
        android:layout_height="@dimen/dimen_150_dip"  
        android:layout_centerInParent="true"  
        android:background="@drawable/wave"  
        />

    <Button
        android:id="@+id/activity_st_li_bt_changecolor"
        android:layout_width="@dimen/dimen_150_dip"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="102dp"
        android:visibility="invisible"
        style="@style/text_3"
        android:background="@drawable/colorlight_on"
        android:text="@string/activity_colorlight_on" />

</RelativeLayout>