<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_sc_se"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_250_dip"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal" >
    
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:background="@android:color/white"/>
        
        <com.smarthome.app.widget.CycleWheelView
			  android:id="@+id/activity_sc_se_hour"
			  android:layout_width="0dp"
			  android:layout_height="match_parent"
			  android:layout_weight="0.4" />
    
        <com.smarthome.app.widget.CycleWheelView
			  android:id="@+id/activity_sc_se_minute"
			  android:layout_width="0dp"
			  android:layout_height="match_parent"
			  android:layout_weight="0.4" />
        
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:background="@android:color/white" />
        
    </LinearLayout>
        
    <ImageView 
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40_dip"
        android:background="@color/background"
        android:contentDescription="@string/fragment_background" />
    
    <include layout="@layout/layout_line_horizonal"/>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
        <LinearLayout 
            android:id="@+id/activity_sc_se_repeat"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_60_dip"
            android:clickable="true"
			android:focusable="true"
			android:background="@drawable/row_selector"
			android:orientation="horizontal" >
            
            <TextView 
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_60_dip"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen_20_dip"
                style="@style/text_2"
                android:text="@string/text_repeat"	/>
            
            <TextView 
                android:id="@+id/activity_sc_se_tv_repeat"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_60_dip"
                android:gravity="center"
                style="@style/text_10" />
            
            <TextView 
                android:layout_width="@dimen/dimen_40_dip"
                android:layout_height="@dimen/dimen_60_dip"
                android:gravity="center"
                style="@style/text_10"
                android:text=">"	/>
            
        </LinearLayout>
        
        <include layout="@layout/layout_line_horizonal"/>
        
        <LinearLayout 
            android:id="@+id/activity_sc_se_label"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_60_dip"
            android:clickable="true"
			android:focusable="true"
			android:background="@drawable/row_selector"
			android:orientation="horizontal" >
            
            <TextView 
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_60_dip"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen_20_dip"
                style="@style/text_2"
                android:text="@string/text_label"	/>
            
            <TextView 
                android:id="@+id/activity_sc_se_tv_label"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_60_dip"
                android:gravity="center"
                style="@style/text_10" />
            
            <TextView 
                android:layout_width="@dimen/dimen_40_dip"
                android:layout_height="@dimen/dimen_60_dip"
                android:gravity="center"
                style="@style/text_10"
                android:text=">"	/>
            
        </LinearLayout>
        
        <include layout="@layout/layout_line_horizonal"/>
        
         <LinearLayout 
            android:id="@+id/activity_sc_se_event"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_60_dip"
            android:clickable="true"
			android:focusable="true"
			android:background="@drawable/row_selector"
			android:orientation="horizontal" >
            
            <TextView 
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_60_dip"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen_20_dip"
                style="@style/text_2"
                android:text="@string/text_event"	/>
            
            <TextView 
                android:id="@+id/activity_sc_se_tv_event"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_60_dip"
                android:gravity="center"
                style="@style/text_10" />
            
            <TextView 
                android:layout_width="@dimen/dimen_40_dip"
                android:layout_height="@dimen/dimen_60_dip"
                android:gravity="center"
                style="@style/text_10"
                android:text=">"	/>
            
        </LinearLayout>
        
        <include layout="@layout/layout_line_horizonal"/>
        
        <ImageView 
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80_dip"
        android:background="@color/background"
        android:contentDescription="@string/fragment_background" />
        
        <include layout="@layout/layout_line_horizonal"/>
        
         <LinearLayout 
            android:id="@+id/activity_sc_se_delete"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_60_dip"
            android:clickable="true"
			android:focusable="true"
			android:background="@drawable/row_selector"
			android:orientation="vertical" >
            
            <TextView 
                android:layout_width="@dimen/dimen_100_dip"
                android:layout_height="@dimen/dimen_60_dip"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                style="@style/text_11"
                android:text="@string/text_delete"	/>
            
        </LinearLayout>
        
    </LinearLayout>
    
    <ImageView 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:contentDescription="@string/fragment_background" />
    
</LinearLayout>