<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_sc"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/dimen_90_dip"
        layout="@layout/layout_line_horizonal" />

    <TextView
        android:id="@+id/item_sc_time"
        style="@style/text_9"
        android:layout_width="@dimen/dimen_150_dip"
        android:layout_height="@dimen/dimen_80_dip"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/dimen_15_dip"
        android:gravity="center"/>

    <TextView
        android:id="@+id/item_sc_name"
        style="@style/text_8"
        android:layout_width="@dimen/dimen_100_dip"
        android:layout_height="@dimen/dimen_80_dip"
        android:layout_alignBaseline="@+id/item_sc_time"
        android:layout_alignBottom="@+id/item_sc_time"
        android:layout_toRightOf="@+id/item_sc_time"
        android:gravity="center"/>


    <Button
        android:id="@+id/item_sc_onoff"
        android:layout_width="@dimen/dimen_80_dip"
        android:layout_height="@dimen/dimen_50_dip"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/dimen_20_dip"
        android:layout_marginTop="@dimen/dimen_20_dip"
        android:background="@drawable/switch_onoff_selector"
        android:focusable="true" />

</RelativeLayout>