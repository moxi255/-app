<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    
    <ImageView 
        android:id="@+id/item_al_image"
        android:layout_width="0dp"
        android:layout_height="@dimen/dimen_90_dip"
        android:layout_marginLeft="@dimen/dimen_3_dip"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:contentDescription="@string/imageview" />
    
    <TextView 
        android:id="@+id/item_al_name"
        android:layout_width="0dp"
        android:layout_height="@dimen/dimen_90_dip"
		android:layout_marginLeft="@dimen/dimen_15_dip"
        android:layout_weight="3"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        style="@style/text_2"/>

    <Button
        android:id="@+id/item_al_onoff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/dimen_20_dip"
        android:background="@drawable/listview_onoff_selector"
        android:focusable="true" />
    
</LinearLayout>
