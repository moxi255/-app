<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layout_st_titlebar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_75_dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <TextView
            android:id="@+id/layout_st_ti_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            style="@style/text_3" />

        <ImageButton
            android:id="@+id/layout_st_ti_back"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/title_back"
            android:contentDescription="@string/button_back" />

        <ImageButton
            android:id="@+id/layout_st_ti_more"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:background="@drawable/title_more"
            android:contentDescription="@string/button_more" />
        
</RelativeLayout>
    
