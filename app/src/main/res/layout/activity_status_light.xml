<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StatusLightActivity">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/activity_st_li"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/layout_titlebar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_75_dip"
            android:background="@color/green" >

            <Button
                android:id="@+id/layout_ti_button_backward"
                style="@style/Text.Title_Button"
                android:layout_width="@dimen/dimen_80_dip"
                android:layout_height="match_parent"
                android:background="@color/green"
                android:drawableLeft="@mipmap/back_arrow"
                android:drawablePadding="@dimen/dimen_6_dip"
                android:gravity="center"
                android:onClick="onClick"
                android:color="@color/white"
                android:text="@string/button_back"
                android:paddingLeft="@dimen/dimen_10_dip"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/layout_ti_text_title"
                style="@style/Text.Title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center" />

            <Button
                android:id="@+id/layout_ti_button_forward"
                style="@style/Text.Title_Button"
                android:layout_width="@dimen/dimen_80_dip"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@color/green"
                android:gravity="center"
                android:onClick="onClick"
                android:paddingRight="@dimen/dimen_5_dip"
                android:visibility="invisible" />

        </RelativeLayout>

        <Button
            android:id="@+id/activity_st_li_bt_onoff"
            android:layout_width="@dimen/dimen_150_dip"
            android:layout_height="@dimen/dimen_150_dip"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:focusable="true"
            android:background="@drawable/status_light_onoff_selector" />

        <ImageView
            android:id="@+id/wave1"
            android:layout_width="@dimen/dimen_150_dip"
            android:layout_height="@dimen/dimen_150_dip"
            android:layout_centerInParent="true"
            android:background="@mipmap/wave"
            />

        <ImageView
            android:id="@+id/wave2"
            android:layout_width="@dimen/dimen_150_dip"
            android:layout_height="@dimen/dimen_150_dip"
            android:layout_centerInParent="true"
            android:background="@mipmap/wave"
            />

        <ImageView
            android:id="@+id/wave3"
            android:layout_width="@dimen/dimen_150_dip"
            android:layout_height="@dimen/dimen_150_dip"
            android:layout_centerInParent="true"
            android:background="@mipmap/wave"
            />

        <Button
            android:id="@+id/activity_st_li_bt_changecolor"
            android:layout_width="@dimen/dimen_150_dip"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="102dp"
            android:visibility="invisible"
            style="@style/text_3"
            android:background="@mipmap/colorlight_on"
            android:text="@string/activity_colorlight_on" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>